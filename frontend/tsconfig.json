{
	"compilerOptions": {
		"target": "es5",
		"module": "es6", 
		"lib": ["DOM", "ES2015"], 
		"outDir": "./dist",
		"rootDir": "./src", 
		"moduleResolution": "node", 
		"esModuleInterop": true, 
		"strict": true, 
		"skipLibCheck": true 
	},
	"include": [
		"src/**/*.ts" 
	],
	"exclude": [
		"node_modules" 
	]
}