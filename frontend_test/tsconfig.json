/* Using ES Modules */
{
	"compilerOptions": {
		"target": "ES2022", // https://www.typescriptlang.org/tsconfig/#target
		"module": "NodeNext", // Enables ESM support
		"moduleResolution": "NodeNext", // Resolves imports using ESM rules
		"esModuleInterop": true, // Ensures compatibility with ESM packages
		"resolveJsonModule": true, // Enables JSON imports
		"skipLibCheck": true, // Speeds up compilation
		"strict": true, // Enable strict type-checking
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist", // Compiled output directory
		"rootDir": "src" // Source files directory
		// "rootDir": "."
	},
	"include": [
		"src"
	], // Only compile `src/` folder
	"exclude": [
		"node_modules",
		"dist"
	] // Ignore `node_modules` and `dist/`
}