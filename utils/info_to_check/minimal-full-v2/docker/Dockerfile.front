# Use Node.js to build and serve the TypeScript frontend
FROM node:18

# Set working directory inside the container
WORKDIR /app

# Copy frontend files into the container
COPY frontend /app

# Install dependencies (only if package.json exists)
RUN if [ -f package.json ]; then npm install; fi

# Expose frontend development port
EXPOSE 5173

# Start the Vite development server
CMD ["npx", "vite", "--host"]
